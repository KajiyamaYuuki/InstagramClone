<!DOCTYPE html>
<html>
  <head>
    <title>Kajistagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar text-white bg-dark">
      <div class="container">
        <div class="nabar-header">
          <%= link_to root_path, class:"logo" do %>
            <h1>Kajistagram</h1>
          <% end %>
            <% flash.each do |key, value| %>
              <%= content_tag(:div, value, class: "#{key}") %>
            <% end %>
            <% if logged_in? %>
              <%= link_to "Profile", user_path(current_user.id) %>
              <%= link_to "Log out", session_path(current_user.id), method: :delete %>
              <%= link_to "New post", new_picture_path %>
            <% else %>
              <%= link_to "Sign up", new_user_path %>
              <%= link_to "Log in", new_session_path %>
            <% end %>
        </div>
      </div>
    </header>
    <div class="container">
    <%= yield %>
    </div>
    <footer class="footer">
      <div class="container">
        <p class="text-muted">Copyright Â© 2021 WEF2101 Kajiyama Yuuki.</span>
      </div>
    </footer>
  </body>
</html>
